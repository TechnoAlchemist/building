<% if @building_unit.errors.any? %>
  <ul>
    <%= @building_unit.errors.full_messages.each do |message|%>
      <li><%= message %></li>
      <% end %>
  <ul>
<% end %>

<%= form_for(@building_unit) do |f|%>
  
  <div class="field">
    <%= f.label :street_address %><br>
    <%= f.text_field :street_address %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :postal_code %><br>
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.label :building_owner_id, "Building owner" %><br>
    <%= f.collection_select :building_owner_id, BuildingOwner.all, 
    :id, :name, :prompt => true %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
  
<% end %>
